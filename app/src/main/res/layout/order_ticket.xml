<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:background="@color/whitebackground"

    >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"

        android:textAlignment="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/background"
        android:paddingTop="2dp"
        android:paddingBottom="1dp"

        />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/background"
            android:gravity="top|left"
            android:layoutDirection="rtl"
            android:orientation="horizontal"

            android:paddingBottom="6dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"

            android:paddingTop="1dp"
            android:textAlignment="center">

        <TextView

            android:id="@+id/name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textDirection="rtl"
            android:textSize="25sp" />


    </RelativeLayout>



        <LinearLayout

            android:paddingLeft="10dp"
            android:paddingRight="3dp"
            android:paddingBottom="5dp"
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:layout_gravity="top|left"

            android:layout_weight="0"
            android:layout_width="70px"
            android:layout_height="70px"
            android:id="@+id/IVAjal"
            android:layout_marginRight="8dp"
            android:background="@drawable/familyfinder" />



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name(Owner)"
        android:id="@+id/name_owner"
        android:layout_alignParentTop="true"
        android:gravity="top|center"
        android:background="@color/white"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_toLeftOf="@+id/webView"
        android:layout_toRightOf="@+id/bufolowSubscrible"
        android:layout_toEndOf="@+id/bufolowSubscrible"
        android:layout_weight="0.02"
        android:textColor="#0894f8"
        android:textSize="12dp"
        android:textStyle="bold"
        android:paddingRight="3dp" />
    <TextView
        android:textStyle="italic"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2015-12-11"
        android:textSize="10dp"
        android:id="@+id/owner_date" />
</LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Name(deliver)"
                    android:id="@+id/name_deliver"
                    android:layout_alignParentTop="true"
                    android:gravity="top|center"
                    android:background="@color/white"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_toLeftOf="@+id/webView"
                    android:layout_toRightOf="@+id/bufolowSubscrible"
                    android:layout_toEndOf="@+id/bufolowSubscrible"
                    android:layout_weight="0.02"
                    android:textColor="#0894f8"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:paddingRight="3dp" />
                <TextView
                    android:textStyle="italic"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="2015-12-11"
                    android:textSize="10dp"
                    android:id="@+id/txt_news_date" />
            </LinearLayout>








</LinearLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="3dp"
        android:paddingTop="30dp">

        <ImageView

            android:id="@+id/iv_route"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:layout_marginRight="8dp"
            android:background="@drawable/delivery" />

        <TextView
            android:id="@+id/aaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_route"
            android:text="Ship" />

        <ImageView

            android:id="@+id/iv_history"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="4pt"
            android:layout_toRightOf="@id/iv_route"
            android:background="@drawable/packagereturn"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_history"
            android:layout_toRightOf="@id/aaa"
            android:paddingLeft="5dp"
            android:text="Cancel" />


        <TextView

            android:id="@+id/pending"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="bottom|right"
            android:text="Pending"
            android:textDirection="rtl"
            android:textSize="30sp" />


    </RelativeLayout>

</LinearLayout>