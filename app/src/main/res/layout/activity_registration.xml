<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.hussienalrubaye.familyfinder.Registration">

    <LinearLayout
        android:paddingTop="15pt"
        android:background="@color/whitebackground"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:background="@color/whitebackground"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LLogin"
            android:paddingTop="5dp"
            android:paddingLeft="5dp">


            <LinearLayout
                android:padding="5pt"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:touchscreenBlocksFocus="false"
                android:layout_marginBottom="3dp">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/EDTUser"
                    android:layout_weight="1"
                    android:textColor="#ff1a102c"
                    android:background="@android:drawable/editbox_background"
                    android:textSize="20dp"
                    android:hint="enter your Email"
                    android:paddingBottom="9dp"
                    android:paddingTop="9dp"
                    android:layout_marginBottom="10dp"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:layout_marginTop="8pt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/EDTpassword"
                    android:layout_weight="1"
                    android:textColor="#ff1a102c"
                    android:background="@android:drawable/editbox_background"
                    android:textSize="20dp"
                    android:hint="enter your Password"
                    android:paddingBottom="9dp"
                    android:paddingTop="9dp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <Button
                    android:layout_marginTop="1pt"
                    android:layout_width="match_parent"
                    android:layout_height="30pt"
                    android:text="Sign Up"
                    android:id="@+id/BuSignUp"
                    android:background="@drawable/buttonblue"
                    android:onClick="BuRegister"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ff06071c"
                    android:layout_weight="0"
                    android:layout_marginRight="10dp" />
                <Button
                    android:layout_marginTop="1pt"
                    android:layout_width="match_parent"
                    android:layout_height="30pt"
                    android:text="Next"
                    android:id="@+id/BuNext"
                    android:background="@drawable/buttonblue"
                    android:onClick="BuNext"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ff06071c"
                    android:layout_weight="0"
                    android:layout_marginRight="10dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
