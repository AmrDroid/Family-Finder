<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:background="@color/whitebackground"

    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"

        android:textAlignment="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/background"
        android:paddingTop="2dp"
        android:paddingBottom="1dp"

        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:textAlignment="center"

            android:background="@drawable/background"
            android:paddingTop="1dp"
            android:paddingBottom="6dp"

            android:paddingLeft="3dp"
            android:paddingRight="3dp">

            <ImageView
                android:layout_gravity="top|left"

                android:layout_weight="0"
                android:layout_width="55px"
                android:layout_height="55px"
                android:id="@+id/IVAjal"
                android:layout_marginRight="8dp"
                android:background="@drawable/familyfinder" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="channel name"
                    android:id="@+id/txt_user_name"
                    android:layout_alignParentTop="true"
                    android:gravity="right"
                    android:background="@color/white"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_toLeftOf="@+id/webView"
                    android:layout_toRightOf="@+id/bufolowSubscrible"
                    android:layout_toEndOf="@+id/bufolowSubscrible"
                    android:layout_weight="1"
                    android:textColor="#0894f8"
                    android:textSize="12dp"
                    android:textStyle="bold"

                    android:paddingRight="3dp" />

                <TextView
                    android:textStyle="italic"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="2015-12-11"
                    android:textSize="10dp"

                    android:id="@+id/txt_news_date" />
            </LinearLayout>

            <TextView

                android:textDirection="ltr"
                android:paddingLeft="1dp"
                android:text="(20%) "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_progress"
                android:layout_weight="0"
                android:textSize="12sp" />
            <ProgressBar

                android:paddingLeft="2dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pbBatteryLevel"
                android:layout_weight="0"
                android:max="100"

                android:progress="50" />

            <TextView

                android:textDirection="rtl"

                android:text="Battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_show"
                android:layout_weight="0"
                android:textSize="12sp" />


        </LinearLayout>

        <WebView
            android:background="@drawable/background"

            android:layout_width="fill_parent"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/wv_map"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/txtflollower"
            android:layout_weight="0"
            android:layout_marginBottom="1dp"
            android:layout_height="250.50px">

            <ImageView
                android:background="@drawable/background"
                android:scaleType="fitXY"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="250.50px"

                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/txtflollower"
                android:layout_weight="0"
                android:layout_marginBottom="1dp" />

            <ImageView
                android:background="@drawable/background"
                android:scaleType="fitXY"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="250.50px"

                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/txtflollower"
                android:layout_weight="0"
                android:layout_marginBottom="1dp" />
        </WebView>

        <LinearLayout

            android:paddingLeft="10dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/iv_route"
                android:layout_marginRight="8dp"
                android:background="@drawable/route" />

            <ImageView
                android:layout_marginLeft="3pt"
                android:paddingLeft="10dp"

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/iv_history"
                android:background="@drawable/eye" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>

    </LinearLayout>
</LinearLayout>